# Environment settings
ENVIRONMENT=development
DEBUG=true

# MongoDB connection
MONGODB_URI=mongodb://username:password@localhost:27017/twitter_monitor?authSource=admin
MONGODB_DB=twitter_monitor

# Twitter API settings
TWITTER_SERVICE_TYPE=twitter_api_io   # options: official or twitter_api_io

# Official Twitter API (when TWITTER_SERVICE_TYPE=official)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_API_BEARER_TOKEN=your_bearer_token

# TwitterAPI.io (when TWITTER_SERVICE_TYPE=twitter_api_io)
TWITTERAPI_IO_API_KEY=your_twitterapi_io_key
TWITTERAPI_IO_BASE_URL=https://api.twitterapi.io/v1.1

# CORS settings (comma separated list of origins)
BACKEND_CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# Extraction settings
DEFAULT_TWEETS_LIMIT=100
DEFAULT_TWEET_LANG=fa
EXTRACTION_BATCH_SIZE=20
API_RATE_LIMIT_WAIT=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_ROTATION=true
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5